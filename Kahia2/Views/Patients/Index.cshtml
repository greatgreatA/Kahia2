@model IEnumerable<Kahia2.Models.Patient>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Poids)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SituationMatrimoniale)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GroupeSanguin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Taille)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexe)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Poids)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SituationMatrimoniale)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupeSanguin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Taille)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexe)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPatient">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPatient">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPatient">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
